<h1>Edit Cube</h1>
<div class="form">
  <form action='/edit/{{_id}}' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{this.name}}">
    <label for="name">Description</label>
    <textarea id="name" name="description">{{this.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{this.imageUrl}}">
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficultyLevel">
      {{#each options}}
        {{#if this.selected}}
          <option value="{{@index}}" selected>{{this.title}}</option>
        {{else}}
          <option value="{{@index}}">{{this.title}}</option>
        {{/if}}
      {{/each}}
    </select>
    <input class="button" type="submit" value="Edit">
  </form>
</div>